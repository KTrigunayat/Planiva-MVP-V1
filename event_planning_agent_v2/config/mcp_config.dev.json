{
  "mcpServers": {
    "vendor-data-server": {
      "command": "python",
      "args": ["-m", "event_planning_agent_v2.mcp_servers.vendor_server"],
      "env": {
        "DATABASE_URL": "${DATABASE_URL}",
        "LOG_LEVEL": "DEBUG",
        "MCP_SERVER_PORT": "8001",
        "MCP_SERVER_HOST": "0.0.0.0",
        "ENABLE_SECURITY": "false",
        "MAX_CONNECTIONS": "5",
        "CONNECTION_TIMEOUT": "30",
        "REQUEST_TIMEOUT": "60"
      },
      "disabled": false,
      "autoApprove": [
        "enhanced_vendor_search",
        "vendor_compatibility_check",
        "vendor_availability_check",
        "vendor_similarity_search",
        "debug_vendor_data",
        "reset_vendor_cache"
      ],
      "security": {
        "allowedOrigins": ["*"],
        "requireAuth": false,
        "rateLimiting": {
          "enabled": false
        }
      },
      "healthCheck": {
        "enabled": true,
        "interval": 60,
        "timeout": 15,
        "retries": 2
      }
    },
    "calculation-server": {
      "command": "python",
      "args": ["-m", "event_planning_agent_v2.mcp_servers.calculation_server"],
      "env": {
        "LOG_LEVEL": "DEBUG",
        "MCP_SERVER_PORT": "8002",
        "MCP_SERVER_HOST": "0.0.0.0",
        "ENABLE_SECURITY": "false",
        "MAX_CONNECTIONS": "5",
        "CONNECTION_TIMEOUT": "30",
        "REQUEST_TIMEOUT": "120"
      },
      "disabled": false,
      "autoApprove": [
        "fitness_score_calculation",
        "budget_optimization",
        "cost_prediction",
        "vendor_value_analysis",
        "debug_calculation",
        "benchmark_algorithms"
      ],
      "security": {
        "allowedOrigins": ["*"],
        "requireAuth": false,
        "rateLimiting": {
          "enabled": false
        }
      },
      "healthCheck": {
        "enabled": true,
        "interval": 60,
        "timeout": 15,
        "retries": 2
      }
    },
    "monitoring-server": {
      "command": "python",
      "args": ["-m", "event_planning_agent_v2.mcp_servers.monitoring_server"],
      "env": {
        "LOG_LEVEL": "DEBUG",
        "MCP_SERVER_PORT": "8003",
        "MCP_SERVER_HOST": "0.0.0.0",
        "PROMETHEUS_URL": "http://localhost:9090",
        "ENABLE_SECURITY": "false",
        "MAX_CONNECTIONS": "3",
        "CONNECTION_TIMEOUT": "30",
        "REQUEST_TIMEOUT": "30"
      },
      "disabled": false,
      "autoApprove": [
        "log_agent_interaction",
        "track_workflow_performance",
        "generate_health_report",
        "get_agent_performance_stats",
        "get_workflow_analytics",
        "debug_monitoring",
        "clear_metrics"
      ],
      "security": {
        "allowedOrigins": ["*"],
        "requireAuth": false,
        "rateLimiting": {
          "enabled": false
        }
      },
      "healthCheck": {
        "enabled": true,
        "interval": 60,
        "timeout": 15,
        "retries": 2
      }
    }
  },
  "globalSettings": {
    "security": {
      "enableTLS": false,
      "authTokenExpiry": 7200,
      "maxConcurrentConnections": 20
    },
    "logging": {
      "level": "DEBUG",
      "format": "pretty",
      "enableMetrics": true,
      "metricsPort": 9091
    },
    "performance": {
      "enableCaching": true,
      "cacheSize": 100,
      "cacheTTL": 60,
      "enableCompression": false
    }
  }
}