# Production Environment Configuration
ENVIRONMENT=production

# Database Configuration
DATABASE_URL=${DATABASE_URL}
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_ECHO=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false
DEBUG=false

# Security Configuration (Production - Strict)
AUTH_ENABLED=true
JWT_SECRET=${JWT_SECRET}
SECURITY_ENABLE_SECURITY_HEADERS=true
RATE_LIMITING_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=2000

# CORS Configuration (Production - Restrictive)
CORS_ORIGINS=${CORS_ORIGINS}
ALLOWED_HOSTS=${ALLOWED_HOSTS}

# LLM Configuration
OLLAMA_BASE_URL=${OLLAMA_BASE_URL}
GEMMA_MODEL=gemma:2b
TINYLLAMA_MODEL=tinyllama
MODEL_TIMEOUT=180

# Workflow Configuration
CREW_VERBOSE=false
MAX_ITERATIONS=10
BEAM_WIDTH=3
MAX_WORKFLOW_ITERATIONS=20
AGENT_TIMEOUT=300
WORKFLOW_TIMEOUT=1800

# MCP Configuration
MCP_SERVERS_CONFIG=config/mcp_config.prod.json
MCP_CONNECTION_TIMEOUT=15
MCP_REQUEST_TIMEOUT=30
ENABLE_MCP_SECURITY=true
MCP_AUTH_TOKEN=${MCP_AUTH_TOKEN}

# Observability Configuration
LOG_LEVEL=INFO
ENABLE_TRACING=true
ENABLE_METRICS=true
LOG_FORMAT=json
PROMETHEUS_URL=${PROMETHEUS_URL}
JAEGER_ENDPOINT=${JAEGER_ENDPOINT}

# Configuration Management
CONFIG_WATCH_ENABLED=false
CONFIG_WATCH_INTERVAL=30

# Production Security
API_BASE_URL=${API_BASE_URL}
API_SERVER_IP=${API_SERVER_IP}
GRAFANA_PASSWORD=${GRAFANA_PASSWORD}
GRAFANA_SECRET_KEY=${GRAFANA_SECRET_KEY}

# Performance Tuning
ENABLE_CACHING=true
CACHE_SIZE=5000
CACHE_TTL=600