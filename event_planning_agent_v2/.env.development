# Development Environment Configuration
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=postgresql://eventuser:eventpass@localhost:5432/eventdb_dev
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_ECHO=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=true
DEBUG=true

# Security Configuration (Development - Less Strict)
AUTH_ENABLED=false
JWT_SECRET=dev-secret-key-not-for-production
SECURITY_ENABLE_SECURITY_HEADERS=false
RATE_LIMITING_ENABLED=false

# CORS Configuration (Development - Permissive)
CORS_ORIGINS=*
ALLOWED_HOSTS=*

# LLM Configuration
OLLAMA_BASE_URL=http://localhost:11434
GEMMA_MODEL=gemma:2b
TINYLLAMA_MODEL=tinyllama
MODEL_TIMEOUT=300

# Workflow Configuration
CREW_VERBOSE=true
MAX_ITERATIONS=10
BEAM_WIDTH=3
MAX_WORKFLOW_ITERATIONS=20
AGENT_TIMEOUT=600
WORKFLOW_TIMEOUT=3600

# MCP Configuration
MCP_SERVERS_CONFIG=config/mcp_config.dev.json
MCP_CONNECTION_TIMEOUT=30
MCP_REQUEST_TIMEOUT=60
ENABLE_MCP_SECURITY=false

# Observability Configuration
LOG_LEVEL=DEBUG
ENABLE_TRACING=true
ENABLE_METRICS=true
LOG_FORMAT=pretty
PROMETHEUS_URL=http://localhost:9090

# Configuration Management
CONFIG_WATCH_ENABLED=true
CONFIG_WATCH_INTERVAL=5

# Development Tools
ENABLE_DEBUG_ENDPOINTS=true
ENABLE_PROFILING=true